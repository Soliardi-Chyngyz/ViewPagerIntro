<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/profile"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="32dp"
    tools:context=".ui.Profile.ProfileFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="200dp"
        android:layout_marginBottom="5dp"
        android:gravity="center_horizontal">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="60dp"

            android:background="@drawable/red">

            <TextView
                android:id="@+id/t1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:fontFamily="@font/abril_fatface"
                android:text="Neel Litoriya"
                android:textSize="20sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginRight="8dp"
                app:layout_constraintEnd_toStartOf="@+id/t2"
                app:layout_constraintTop_toBottomOf="@+id/t1"
                app:srcCompat="@drawable/ic_baseline_place_24" />

            <TextView
                android:id="@+id/t2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:layout_marginBottom="30dp"
                android:fontFamily="sans-serif-thin"
                android:text="India"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.531"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/t1" />

            <LinearLayout
                android:layout_width="match_parent"
                android:id="@+id/liner1"
                android:layout_marginTop="15dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                app:layout_constraintHorizontal_weight="1"
                app:layout_constraintTop_toBottomOf="@+id/t2"
                tools:ignore="MissingConstraints">

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:layout_marginRight="40dp"
                    android:textColor="#D57DD0"
                    android:fontFamily="@font/amiko"
                    android:text="645"
                    android:textSize="20sp"
                    app:layout_constraintTop_toBottomOf="@+id/t2"
                    tools:layout_editor_absoluteX="265dp" />

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:layout_marginRight="40dp"
                    android:fontFamily="@font/amiko"
                    android:text="342"
                    android:textSize="20sp"
                    app:layout_constraintTop_toBottomOf="@+id/t2"
                    tools:layout_editor_absoluteX="27dp" />

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="40dp"
                    android:fontFamily="@font/amiko"
                    android:text="222"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    app:layout_constraintTop_toBottomOf="@+id/t2"
                    tools:layout_editor_absoluteX="107dp" />

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:fontFamily="@font/amiko"
                    android:text="423"
                    android:textSize="20sp"
                    app:layout_constraintTop_toBottomOf="@+id/t2"
                    tools:layout_editor_absoluteX="186dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:id="@+id/liner2"
                android:layout_marginTop="15dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                app:layout_constraintHorizontal_weight="1"
                app:layout_constraintTop_toBottomOf="@+id/liner1">

                <TextView
                    android:text="Posts"
                    android:fontFamily="@font/amiko"
                    android:textSize="12sp"
                    android:layout_marginRight="25dp"
                    android:textColor="#D57DD0"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:text="Followers"
                    android:fontFamily="@font/amiko"
                    android:textSize="12sp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="23dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="25dp"
                    android:fontFamily="@font/amiko"
                    android:text="Following"
                    android:textSize="12sp" />

                <TextView
                    android:text="Photos"
                    android:fontFamily="@font/amiko"
                    android:textSize="12sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Follow"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/abril_fatface"
                android:textColor="#fff"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/liner2" />


        </androidx.constraintlayout.widget.ConstraintLayout>

        <LinearLayout
            android:id="@+id/cont"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="40dp"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/btn_plus"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:padding="10dp"
                app:srcCompat="@drawable/ic_add_white"
                android:background="@drawable/circle"
                />

            <ImageView
                android:id="@+id/etImg"
                android:layout_width="80dp"
                android:layout_height="80dp"
                app:srcCompat="@drawable/ic_dashboard_black_24dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:scaleType="centerCrop"
                />

            <ImageView
                android:id="@+id/btn_com"
                android:layout_width="40dp"
                android:background="@drawable/circle2"
                android:layout_height="40dp"
                android:padding="12dp"
                app:srcCompat="@drawable/ic_baseline_mode_comment_24"
                />

        </LinearLayout>
    </RelativeLayout>
</LinearLayout>